#!/bin/bash

echo "Making pre-invocation changes to the assemble script."

echo "MY_VAR is set to: '${MY_VAR}'"

/usr/libexec/s2i/assemble
rc=$?

if [ $rc -eq 0 ]; then
    echo "Making post-invocation changes to the assemble script."
    echo "MY_VAR is set to: '${MY_VAR}'"
else
    echo "Error: assemble failed!"
fi

exit $rc
